@model ChatViewModel

@{
    ViewData["Title"] = "Chat";
}

<h2>@ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse border-end">
            <div class="position-sticky pt-3">
                <div class="list-group list-group-flush">

                    <!-- Friends Section -->
                    <a href="#collapseFriends" class="list-group-item list-group-item-action py-2 ripple" data-bs-toggle="collapse" aria-expanded="true">
                        <i class="fas fa-user-friends me-2"></i>Friends
                    </a>
                    <div class="collapse show" id="collapseFriends" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px;">
                        <ul class="list-group list-group-flush">
                            @foreach(var friend in Model.Friends){
                                <li class="list-group-item py-1">
                                    <a href="#" class="text-primary">@friend.Name</a>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Chat Groups Section -->
                    <a href="#collapseGroups" class="list-group-item list-group-item-action py-2 ripple" data-bs-toggle="collapse" aria-expanded="true">
                        <i class="fas fa-comments me-2"></i>Chat Groups
                    </a>
                    <div class="collapse" id="collapseGroups" style="max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px;">
                        <ul class="list-group list-group-flush">
                            @for(int i = 0; i < 50; i++){
                                <li class="list-group-item py-1">
                                    <a href="#" class="text-reset">Group @i</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Sidebar End -->
        <!-- Chat Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex flex-column h-100 border">
                <!-- Chat Header -->
                <div id="chat-header" class="bg-white border-bottom py-3 px-4">
                    <h5 class="mb-0">Chat Room</h5>
                </div>
                <!-- Chat Messages -->
                <div id="chat-messages" class="flex-grow-1 bg-light overflow-auto p-3" style="border-top: 1px solid #ddd; border-bottom: 1px solid #ddd;">
                    <p class="text-muted">Start your conversation here...</p>
                    <!-- Example messages -->
                    <div class="message my-2">
                        <strong>User1:</strong> Hello!
                    </div>
                    <div class="message my-2">
                        <strong>You:</strong> Hi! How are you?
                    </div>
                </div>
                <!-- Chat Input -->
                <div id="chat-input" class="bg-white border-top py-3 px-4">
                    <form method="post" action="/sendMessage">
                        <div class="input-group">
                            <input type="text" name="message" class="form-control" placeholder="Type your message..." />
                            <button class="btn btn-primary" type="submit">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <!-- Chat Content End -->
    </div>
</div>
